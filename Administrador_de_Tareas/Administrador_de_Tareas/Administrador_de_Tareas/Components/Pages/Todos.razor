@page "/"


@rendermode InteractiveServer

<h3>Tasks</h3>

<button class="btn btn-primary" @onclick="DeleteSelectedTasks">Borrar tareas selecionadas</button>

<form @onsubmit="AddTask">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" @bind="newTask.Title" />
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" @bind="newTask.Description"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Add Task</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Description</th>
            <th>Bloqueado</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in tasks)
        {
            <tr>
                <td><input type="checkbox" @onchange="@(e => ChangeSelection(task, e))" /></td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td><button class="btn btn-primary" @onclick="@(e=> ChangePause(task))">@(task.IsBlocked ? "Si" : "No")</button></td>
                <td>
                    <button class="btn btn-primary" @onclick="@(e=> ChangeState(task))">@task.TODOStates.ToString()</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<button class="btn btn-primary"  @onclick="NavigateToPreviousPage" disabled="@IsFirstPage">Previous Page</button>
<button class="btn btn-primary"  @onclick="NavigateToNextPage" disabled="@IsLastPage">Next Page</button>

